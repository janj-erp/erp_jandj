<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.actions.server" id="send_payslips_to_employee">
            <field name="name">Send payslips to employees</field>
            <field name="model_id" ref="model_hr_payslip"/>
            <field name="state">code</field>
            <field name="code">
                records.send_payslips_by_mail()
            </field>
            <field name="groups_id" eval="[(6, 0, [ref('hr_payroll.group_hr_payroll_manager')])]"/>
        </record>

        <record id="payslip_mail" model="mail.template">
            <field name="name">Payslip mail Template</field>
            <field name="subject">Payslip</field>
            <field name="model_id" ref="model_hr_payslip"/>
            <field name="email_from">${object.env.user.company_id.email_formatted | safe}</field>
            <field name="email_to">${object.employee_id.work_email}</field>
            <field name="body_html" type="html">
                <div>
                    <p>
                        Hi,
                        <br/><br/>
                        Please find your payslip below in the attachments...
                    </p>
                </div>
            </field>
            <field name="report_template" ref="report_payslip_menu"/>
            <field name="report_name">Payslip For: ${object.employee_id.name}</field>
        </record>
    </data>
</odoo>