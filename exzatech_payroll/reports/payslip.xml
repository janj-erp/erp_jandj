        <field name="dpi">90</field>
    </record>

    <record id="report_payslip_menu" model="ir.actions.report">
        <field name="name">Payslip</field>
        <field name="model">hr.payslip</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">exzatech_payroll.payslip_template</field>
        <field name="report_file">exzatech_payroll.payslip_template</field>
        <field name="paperformat_id" ref="exzatech_payroll.paperformat_payslip"/>
        <field name="binding_model_id" ref="model_hr_payslip"/>
        <field name="binding_type">report</field>
    </record>


</odoo>