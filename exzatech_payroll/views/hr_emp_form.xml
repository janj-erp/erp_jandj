<?xml version="1.0" encoding="utf-8"?>
<odoo>

<record id="employee_form_inherit_hr_payroll" model="ir.ui.view">
        <field name="name">hr.employee</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook/page[@name='hr_settings']/group/group[2]" position="after">
                <group string="Salary Details">
                    <field name="total_ctc"/>
                    <field name="mbo"/>
                    <field name="structure"/>
                </group>
            </xpath>
             <xpath expr="//notebook/page[@name='hr_settings']/group/group" position="inside">
                <field name="relieving_date"/>
            </xpath>
        </field>
</record>


    <record id="view_hr_payslip_form_inherit_others" model="ir.ui.view">
        <field name="name">hr.payslip.form.inherit</field>
        <field name="model">hr.payslip</field>
        <field name="inherit_id" ref="hr_payroll.view_hr_payslip_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook/page[@name='worked_days_input']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//notebook/page[@name='account_info']" position="inside">
                <group>
                    <group string="Deductions">
                        <field name="food_coupon_ded"/>
                        <field name="income_tax"/>
                        <field name="hr_deduction"/>
                        <field name="other_deductions"/>
                    </group>
                    <group string="Allowances">
                        <field name="food_coupon_alw"/>
                        <field name="onsite_allowance"/>
                        <field name="shift_allowance"/>
                        <field name="other_allowance"/>
                    </group>
                    <group string="Days">
                        <field name="total_days"/>
                        <field name="paid_days"/>
                        <field name="salary_days" invisible="1"/>
                        <field name="leave_days"/>
                        <field name="unpaid_days"/>
                        <field name="weekend_days"/>
                        <field name="public_leave_days"/>
                        <field name="present_days"/>
                    </group>
<!--                    <group string="ARREARS">-->
<!--                        <field name="arrears_basic"/>-->
<!--                        <field name="arrears_hra"/>-->
<!--                        <field name="arrears_lta"/>-->
<!--                        <field name="arrears_spl_alw"/>-->
<!--                        <field name="arrears_std_ded"/>-->
<!--                    </group>-->
                </group>
            </xpath>
            <xpath expr="//notebook" position="inside">
                    <page name ="master_salary_details" string="Master Salary Details">
                        <group>
                            <group>
                                <field name="basic_salary"/>
                                <field name="hra"/>
                                <field name="standard_deduction"/>
                                <field name="lta"/>
                                <field name="special_allowance"/>
                                <field name="variable_allowance"/>
                                <field name="pf_amount"/>
                            </group>
                        </group>
                    </page>
            </xpath>
             <xpath expr="//field[@name='contract_id']" position="replace">
                <field name="contract_id" invisible="1"/>
            </xpath>
        </field>
</record>




</odoo>