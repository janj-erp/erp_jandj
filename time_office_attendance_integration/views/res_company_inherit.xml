<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
     <record id="view_company_form_time_office_integration" model="ir.ui.view">
        <field name="name">view.company.form.time.office.integration</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Biometric Integration">
                    <group>
                        <field name="url"/>
                        <field name="corporate_id"/>
                        <field name="username"/>
                        <field name="password" password="True"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>