            <field name="model">product.tags</field>
            <field name="arch" type="xml">
                <form string="Product Attributes">
                    <group col="4">
<!--                        <field name="attribute" widget="many2onebutton"/>-->
                        <field name="name"/>
                    </group>
                </form>
            </field>
        </record>    

